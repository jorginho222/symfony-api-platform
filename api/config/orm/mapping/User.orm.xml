<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Entity\User" table="user">
        <id name="id" type="string" length="16" />

        <field name="name" length="100" />
        <field name="email" length="100" />
        <field name="password" length="100" nullable="true" />
        <field name="avatar" length="255" nullable="true" />
        <field name="token" length="100" nullable="true" />
        <field name="active" type="boolean" length="100" nullable="true" />
        <field name="resetPasswordToken" length="100" nullable="true" />
        <field name="resetPasswordToken" length="100" nullable="true" />
        <field name="createdAt" type="datetime" />
        <field name="updatedAt" length="100" />

        <lifecycle-callbacks>
        <!-- Al momento de actualizar la entidad llamaremos al metodo markAsUpdated -->
            <lifecycle-callback type="preUpdate" method="markAsUpdated" />
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>